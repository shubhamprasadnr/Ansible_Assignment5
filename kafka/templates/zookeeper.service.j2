# templates/zookeeper.service.j2

[Unit]
Description=Apache Zookeeper Server
After=network.target

[Service]
Type=simple
User={{ zookeeper_user }}
Group={{ zookeeper_group }}
ExecStart={{ zookeeper_exec_start[ansible_os_family] }}
ExecStop={{ zookeeper_exec_stop[ansible_os_family] }}
Restart=on-failure

[Install]
WantedBy=multi-user.target

